@*@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUserRole<string>>*@
@model BookTrackingSystem.Models.Users
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (null != TempData["alertMessage"])
{
    <script type="text/javascript">
        alert('@TempData["alertMessage"]');
    </script>
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit User Role - Admin Functionality</h1>
    </div>
</div>

<div>

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Username</label>
            <select class="form-select" asp-items="@Model.Userslist"
                    asp-for="UserId">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Roles</label>
            <select class="form-select" asp-items="@Model.Roles"
                    asp-for="RoleId">
            </select>
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit"  class=" btn btn-dark">Set Role</button>
            </div>

        </div>

    </form>

</div>