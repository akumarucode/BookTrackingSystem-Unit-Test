@*@model Microsoft.AspNetCore.Identity.IdentityUser*@
@model BookTrackingSystem.Models.Role
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (null != TempData["alertMessage"])
{
    <script type="text/javascript">
        alert('@TempData["alertMessage"]');
    </script>
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Role - Admin Functionality</h1>
    </div>
</div>

<div>
    <form method="post">


        <div class="mb-3">
            <label class="form-label">Role ID</label>
            <input type="text" name="Id" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="Name" class="form-control" asp-for="Name" />
        </div>


        <div class="mb-3">
            <label class="form-label">Normalized Name</label>
            <input type="text" name="NormalizedName" class="form-control" asp-for="NormalizedName" readonly />
        </div>

        <div class="form-group">
            <label class="form-label">Concurrency Stamp</label>
            <input type="text" name="ConcurrencyStamp" class="form-control" asp-for="ConcurrencyStamp" />
        </div>

        <br />

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
            </div>

        </div>



    </form>

</div>